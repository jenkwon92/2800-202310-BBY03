<%- include("templates/header") %>

    <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 col-xl-7">

                    <!-- All profiles -->
                    <div class="card" style="margin-bottom: 20px;">
                        <!-- Basic profile -->
                        <div class="rounded-top text-white d-flex flex-row"
                            style="background-color: #4A596D; height:200px;">
                            <div class="ms-4 mt-auto mb-auto d-flex flex-column" style="width: 150px;">
                                <img src="<%= image || '/images/profile/avatar-1.webp' %>" alt="Profile Image"
                                    class="img-fluid img-thumbnail" style="width: 150px; z-index: 1;">
                            </div>
                            <div class="ms-3"
                                style="font-size: small; color: #d0d4d6; margin-top: auto; margin-bottom: auto;">
                                <h5 style="margin-bottom: 5px;">
                                    <%= username %>
                                </h5>
                                <h6 style="margin-bottom: 5px;">Job: <%= job %>
                                </h6>
                                <h6 style="margin-bottom: 0;">Email: <%= email %>
                                </h6>
                                <span id="edit-icon"
                                    style="font-size: 20px; float: right; position: absolute; top:170px; right: 10px"
                                    class="material-icons-outlined">edit</span>
                            </div>
                        </div>
                        <!-- Basic profile end -->
                        <!-- Basic profile end -->

                        <!-- Skills&interests  -->
                        <div class="card-body p-4 text-black" style="margin-top: 20px;">
                            <div class="mb-5">
                                <p class="lead fw-normal mb-1">Skills</p>
                                <div class="p-4" style="background-color: #d0d4d6; border-radius: 10px;">
                                    <button type="button" class="btn btn-secondary btn-rounded">JS</button>
                                </div>
                                <p class="lead fw-normal mb-1">Interests</p>
                                <div class="p-4" style="background-color: #d0d4d6; border-radius: 10px;">
                                    <button type="button" class="btn btn-secondary btn-rounded">Python</button>
                                </div>
                            </div>
                            <!-- Skills&interests end  -->

                            <!-- edit skills&interests  -->
                            <div class="d-flex justify-content-center align-items-center mb-4">
                                <p class="lead fw-normal mb-0"></p>
                            </div>
                            <div class="row g-2">
                                <div id="go-skill"
                                    class="col-6 col-md-6 mb-2 d-flex align-items-center flex-column justify-content-center"
                                    style=" border: 1px solid #ccc;
                                    border-radius: 10px;
                                    padding: 10px;">
                                    <span id="edit-icon"
                                        style="font-size: 40px; float: right; line-height:20px; margin: 20px;"
                                        class="material-icons-outlined">
                                        computer
                                    </span>
                                    <p style="font-size:1rem" class="text-center mt-2">Skills</p>
                                </div>
                                <div id="go-interest"
                                    class="col-6 col-md-6 mb-2 d-flex align-items-center flex-column justify-content-center"
                                    style=" border: 1px solid #ccc;
                                    border-radius: 10px;
                                    padding: 10px;">
                                    <span id="edit-icon"
                                        style="font-size: 40px; float: right; line-height:20px; margin: 20px;"
                                        class="material-icons-outlined">
                                        menu_book
                                    </span>
                                    <p style="font-size:1rem" class="text-center mt-2">Interests</p>
                                </div>
                            </div>
                            <!-- edit skills&interests end -->

                            <!-- log out  -->
                            <button onclick="window.location.href='/logout'" class="btn btn-sm btn-dark profile-button"
                                type="button"
                                style="border-radius: 10px; align-items: center; margin-top: 50px; width: 100%; margin-bottom: 50px;">Log
                                out</button>
                            <!-- log out end  -->

                        </div>
                    </div>
                </div>
            </div>
    </section>
    </div>
    <!-- function section -->
    <script>

        const editIcon = document.querySelector("#edit-icon");
        editIcon.addEventListener("click", () => {
            window.location.href = "/editProfile";
        });

        const goSkill = document.querySelector("#go-skill");
        goSkill.addEventListener("click", () => {
            window.location.href = "/editSkill";
        });

        const goInterest = document.querySelector("#go-interest");
        goInterest.addEventListener("click", () => {
            window.location.href = "/editInterest";
        });

    </script>

    <%- include("templates/footer") %>