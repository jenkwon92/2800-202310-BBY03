<%- include("templates/header") %>
    <main class="form-signin w-100 m-auto">
        <div class="d-flex gap-2 justify-content-center py-5">
            <form class="text-center border bg-light p-5 rounded shadow-lg" action='/submitLogin' method='post'>

                <h1 class="h3 mb-3 fw-normal">Log In</h1>

                <!-- Email Input -->
                <div class="form-floating my-3">
                    <input name='email' type="email" class="form-control" id="floatingInput"
                        placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div>

                <!-- Password Input -->
                <div class="form-floating my-3">
                    <input name='password' type="password" class="form-control" id="floatingPassword"
                        placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>

                <!-- Error Message Display -->
                <p class="text-danger">
                    <%= msg %>
                </p>

                <!-- Submit Button -->
                <button class="w-100 btn btn-lg btn-primary mb-3" type="submit">Log in</button>

                <p>Don't have an account? <a href="/signUp">Click Here</a></p>
                <p>Forgot Password? <a href="/forgotPassword">Click Here</a></p>

            </form>
        </div>
    </main>
</div>

